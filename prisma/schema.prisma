generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  MANAGER
  MANAGER_ASSISTANT
  USER
  COURIER
}

enum HotelType {
  PHYSICAL
  LEGAL
}

enum EmployeeRole {
  MANAGER
  MANAGER_ASSISTANT
  COURIER
  OTHER
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  mobileNumber  String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  hotels        Hotel[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String

  type              String
  provider          String
  providerAccountId String

  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier   String
  token        String   @unique
  expires      DateTime

  @@unique([identifier, token])
}

model Hotel {
  id                       String     @id @default(cuid())
  type                     HotelType
  userId                   String?
  user                     User?      @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Common fields
  hotelName                String
  hotelRegistrationNumber  String
  numberOfRooms            Int
  email                    String
  mobileNumber             String

  // Physical person
  firstName                String?
  lastName                 String?
  personalId               String?

  // Legal entity
  legalEntityName          String?
  identificationCode       String?
  responsiblePersonName    String?

  createdAt                DateTime   @default(now())
  updatedAt                DateTime   @updatedAt

  @@index([userId])
  @@index([email])
}

model Employee {
  id              String        @id @default(cuid())
  name            String
  email           String?       @unique
  phone           String
  position        EmployeeRole
  contractFile    String?       // File path for contract
  canLogin        Boolean       @default(false) // Only MANAGER, MANAGER_ASSISTANT, COURIER can login
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Invoice {
  id              String        @id @default(cuid())
  invoiceNumber   String        @unique
  customerName    String
  customerEmail   String?
  amount          Float
  status          String        // PENDING, PAID, CANCELLED
  dueDate         DateTime
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([status])
  @@index([dueDate])
}

model DailySheet {
  id              String        @id @default(cuid())
  date            DateTime      @db.Date
  description     String?
  notes           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([date])
  @@index([date])
}

model Inventory {
  id              String        @id @default(cuid())
  itemName        String
  category        String?
  quantity        Int
  unit            String        // kg, piece, liter, etc.
  unitPrice       Float?
  supplier        String?
  lastRestocked   DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([category])
}

model Expense {
  id              String        @id @default(cuid())
  category        String        // Utilities, Rent, Salaries, Supplies, etc.
  description     String
  amount          Float
  date            DateTime      @db.Date
  isRecurring     Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([date])
  @@index([category])
}
